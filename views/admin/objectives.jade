extends layout

block content
  .container
    #objectifInfo.info
      h2 Objective Info
      p
        strong Title :
        |  <span id='objectifInfoTitle'></span>
        br
        strong Description :
        |  <span id='objectifInfoDescription'></span>
        br
        strong Resource :
        |  <span id='objectifInfoResource'></span>
        br
        strong Value to reach :
        |  <span id='objectifInfoAchieve'></span>
        br

    h2 Objectives List
    #objectifList.list
      table
        thead
          th Title
          th Description
          th Type
          th Delete ?
          th Send to
          th Send
        tbody

    #addObjectif
      h2 Add an objective
      form.form-horizontal
        .form-group
          label.col-sm-2.control-label(for="inputObjectifTitle") Title
          .col-sm-10
            input#inputObjectifTitle.form-control(type='text', placeholder='Objective title')
        .form-group
          label.col-sm-2.control-label(for="inputObjectifCommon") Type
          .col-sm-10
            .checkbox
              label
                input#inputObjectifCommon(type="checkbox") 
                | Common objective
        br
        .col-sm-3
          select#inputObjectifResource.resourceSelect.form-control
        .col-sm-6
          input#inputObjectifAchieve.form-control(type='text', placeholder='Value to reach')
        br
        textarea#inputObjectifDescription.form-control(type='text', placeholder='Description')
        br
        //- button.add_field_button Add More Fields
        button#btnAddObjectif.btn.btn-success Add objective

    #editObjectif
      h2 Edit an objective
      fieldset
        input#editObjectifId(type='hidden')
        input#editObjectifTitle(type='text', placeholder='Objective title')
        input#editObjectifDescription(type='text', placeholder='Description')
        br
        select#editObjectifResource.resourceSelect
        input#editObjectifAchieve(type='text', placeholder='Effect')
        br
        //- button.add_field_button Add More Fields
        button#btnEditObjectif Edit objective

    h2
      a#updateView(href="#") UPDATE

  script(src='/javascripts/admin/objectifscript.js')
