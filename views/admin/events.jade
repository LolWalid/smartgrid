extends layout

block content
  .container
    #eventInfo.info
      h2 Event Info
      p
        strong Title :
        |  <span id='eventInfoTitle'></span>
        br
        strong Description :
        |  <span id='eventInfoDescription'></span>
        br
      h2 Effects :
      p#effects


    h2 Events List
    #eventList.list
      table
        thead
          th Title
          th Description
          th Type
          th Delete ?
          th Send
        tbody

    h2#displayAddForm.displayTitle New event
      span.caret
    #addEvent
      form.form-horizontal
        .form-group
          label.col-sm-2.control-label(for="inputEventTitle") Title
          .col-sm-10
            input#inputEventTitle.form-control(type='text', placeholder='Event title')
        .form-group
          label.col-sm-2.control-label(for="inputEventCommon") Type
          .col-sm-10
            .checkbox
              label
                input#inputEventCommon(type="checkbox")
                | Common event
        .add_input_effects
          .form-group
            label.col-sm-2.control-label(for="inputEventResource") Effect
            .col-sm-5
              select.resource.form-control
            //label.col-sm-1.control-label Effect
            .col-sm-4
              input.effect.form-control(type='text', placeholder='Effect')
            .col-sm-1
              button.add_field_button.btn.btn-warning
                span +
        .form-group
          label.col-sm-2.control-label Description
          .col-sm-10
            textarea#inputEventDescription.form-control(type='text', placeholder='Description')
        .form-group
          .col-sm-offset-2.col-sm-10
            button#btnAddEvent.btn.btn-success Add event


    h2 Edit event
    #editEvent.notDisplayed
      form.form-horizontal
        input#editEventId.form-control(type='hidden')
        .form-group
          label.col-sm-2.control-label(for="editEventTitle") Title
          .col-sm-10
            input#editEventTitle.form-control(type='text', placeholder='Event title')
        .form-group
          label.col-sm-2.control-label(for="editEventDescription") Description
          .col-sm-10
            input#editEventDescription.form-control(type='text', placeholder='Description')
        .add_input_effects.form-group
          .col-sm-offset-2.col-sm-10
            button.add_field_button.btn.btn-warning Add More Fields
        button#btnEditEvent.btn.btn-warning Edit Event
    script(src='/javascripts/admin/eventscript.js')
